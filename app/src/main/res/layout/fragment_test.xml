<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/notice_text"
                    android:text="wadaw"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:gravity="center"
                android:orientation="vertical"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/question_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:editable="false"
                    android:hint="Savol"
                    android:text="Ip naychaga ustma-ust konussimon shakilda o‘rnatilganda halqali planka qaysi qonun bo‘yicha xarakatlanadi?" />
            </com.google.android.material.textfield.TextInputLayout>
            <RadioGroup

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:layout_marginVertical="6dp"
                    android:id="@+id/answer1"
                    android:text="sadwdawdaw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.google.android.material.radiobutton.MaterialRadioButton>
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:layout_marginVertical="6dp"
                    android:id="@+id/answer2"
                    android:text="sadwdawdaw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.google.android.material.radiobutton.MaterialRadioButton>
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:textAlignment="textStart"
                    android:layout_marginVertical="6dp"
                    android:id="@+id/answer3"
                    android:text="sadwdawdaw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.google.android.material.radiobutton.MaterialRadioButton>
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:layout_marginVertical="6dp"
                    android:id="@+id/answer4"
                    android:text="sadwdawdaw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.google.android.material.radiobutton.MaterialRadioButton>
            </RadioGroup>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/controll_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/prev_question"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="orqaga"></Button>

        <Button
            android:id="@+id/next_question"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="oldinga"></Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>